        <api_name>x_58872_needit.validatePhoneNumber</api_name>
        <client_callable>false</client_callable>
        <description>This Script Include will validate the phone number in a given field. </description>
        <name>validatePhoneNumber</name>
        <script><![CDATA[function validatePhoneNumber(phoneStr){
	// ensure that phoneStr is a string
	phoneStr = phoneStr + '';
	
	// If phone number matches format xxx-xxx-xxxx, then return true, else false
	if(phoneStr.match(/^\d{3}-\d{3}-\d{4}$/)){
		return true;
	}
	else{
		return false;
	}
}]]></script>
